<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_project_task_issues" model="ir.ui.view">
            <field name="name">project.project.task.issues</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                 <page string="Extra Info" position="after">
                    <page string="Issues">
                        <field name="issue_ids" context="{'default_project_id': project_id, 'default_task_id': active_id}"/>
                    </page>
                 </page>
            </field>
        </record>
        
    </data>
</openerp>
