<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                	<field name="analytic_account_id" />
                    <field name="analytic_reserved"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_tree" model="ir.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree"/>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="after">
                	<field name="analytic_account_id" />
                    <field name="analytic_reserved"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_picking_form_analytic" model="ir.ui.view">
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field eval="2" name="priority"/>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">                     
                <xpath expr="//field[@name='location_id']" position="after">
                	<field name="analytic_account_id"/>              	                 
                </xpath>
            </field>
        </record>

        <record id="view_move_picking_tree" model="ir.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field eval="4" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="after">
                	<field name="analytic_account_id"/>
                    <field name="analytic_reserved"/>
                </xpath>
            </field>
        </record>


        <record id="view_move_search_analytic" model="ir.ui.view">
            <field name="name">stock.move.search</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_search"/>
            <field eval="3" name="priority"/>
            <field name="arch" type="xml">        
                <xpath expr="//field[@name='name']" position="after">
                	<field name="analytic_account_id"/>
                    <field name="analytic_reserved"/>
                </xpath>
            </field>
        </record>   

        <record id="view_move_tree_reception_picking_analytic" model="ir.ui.view">
            <field name="name">stock.move.tree2</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree_receipt_picking"/>
            <field name="priority" eval="6"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                	<field name="analytic_account_id"/>
                    <field name="analytic_reserved"/>
                </xpath>
            </field>
        </record>

        #
        # Lot composition (history)
        #
        <record id="stock_move_tree" model="ir.ui.view">
            <field name="name">Stock Moves</field>
            <field name="model">stock.move</field>
            <field name="field_parent">move_history_ids</field>
            <field name="inherit_id" ref="stock.stock_move_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_id']" position="after">
                	<field name="analytic_account_id"/>
                    <field name="analytic_reserved"/>
                </xpath>
            </field>
        </record>

        <record id="stock_inventory_line_tree" model="ir.ui.view">
            <field name="name">stock.inventory.line.tree</field>
            <field name="model">stock.inventory.line</field>
            <field name="inherit_id" ref="stock.stock_inventory_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_id']" position="after">
                	<field name="analytic_account_id"/>
                </xpath>
            </field>
        </record>
        <!--<record id="view_inventory_line_form" model="ir.ui.view">
            <field name="name">stock.inventory.line.form</field>
            <field name="model">stock.inventory.line</field>
            <field name="inherit_id" ref="stock.view_inventory_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom']" position="after">
                	<field name="analytic_account_id"/>
                </xpath>
            </field>
        </record>-->

        <record id="view_inventory_form" model="ir.ui.view">
            <field name="name">stock.inventory.form</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Inventory Details']/field[@name='line_ids']/tree/field[@name='product_uom_id']"
                       position="after">
                	<field name="analytic_account_id"/>
                </xpath>
               <!-- <xpath
                        expr="//field[@name='line_ids']/form//field[@name='product_uom_id']"
                       position="after">
                	<field name="analytic_account_id"/>
                </xpath>-->
                <xpath expr="//notebook/page[@string='Inventory Adjustments']/field[@name='move_ids']/tree/field[@name='product_uom']"
                       position="after">
                	<field name="analytic_account_id"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
