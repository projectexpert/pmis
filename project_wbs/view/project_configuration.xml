<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="edit_project_stages" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
            	<xpath expr="//page[@string='Project Stages']" position="attributes">
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr="//page[@string='Other Info']" position="attributes">
					<attribute name='invisible'>1</attribute>	
				</xpath>
				<xpath expr="//page[@name='team']" position="attributes">
					<attribute name='string'>Communications</attribute>	
				</xpath>
            </field>            	        
        </record>
    </data>
</odoo>