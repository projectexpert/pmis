<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="resource_plan_line_change_state_form"
                model="ir.ui.view">
            <field name="name">resource.plan.line.change.state.form</field>
            <field name="model">resource.plan.line.change.state</field>
            <field name="arch" type="xml">
                <form string="Change status of Resource Plan Lines">
                    <group>
                        <field name="state"/>
                    </group>
                    <footer>
                        <button string="Execute"
                                name="change_state_confirm"
                                type="object" class="oe_highlight"/>
                        <button string="Cancel"
                                class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_resource_plan_line_change_state_form"
                model="ir.actions.act_window">
            <field name="name">Change status</field>
            <field name="res_model">resource.plan.line.change.state</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="resource_plan_line_change_state_form"/>
            <field name="target">new</field>
        </record>

        <act_window name="Change status"
                    res_model="resource.plan.line.change.state"
                    src_model="analytic.resource.plan.line"
                    view_mode="form"
                    target="new"
                    multi="True"
                    key2="client_action_multi"
                    id="action_resource_plan_line_change_state_form"/>

    </data>
</openerp>
